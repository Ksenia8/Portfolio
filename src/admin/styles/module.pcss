.field__title {
    opacity: 0.3;
    color: #414c63;
    font-family: 'OpenSans';
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.9rem;
    padding-left: 2.8rem;
}
.field__content {
    position: relative;
}
.avatar-icon {
    width: 1,6rem;
    height: 1.8rem;
}
.field__img {
    max-width: 100%;
    position: absolute;
    left: 0;
    top: 0.6rem;
}