.skills__list {
    flex: 0.8;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.skills__foto {
    width: 49%;
    padding-top: 45%;
}

.skills__foto img {
    max-width: 100%;
}

.skills__info {
    width: 80%;
    margin-top: 20%;
}

.skills__title {
    font-family: "Open Sans";
    font-size: 30px;
    font-weight: 700;
    line-height: 36px;
}

.skills__description {
    margin-top: 10%;
}
